@page
@model Tech_Hub.Pages.EditPageModel

@{
    Layout = "_Layout2";
}
<head>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style type="text/css">
        body {
            margin: 0;
            color: #2e323c;
            background: #f5f6fa;
            position: relative;
            height: 100%;
        }
        .container{
        margin:100px;
        }

        .account-settings .user-profile {
            margin: 0 0 1rem 0;
            padding-bottom: 1rem;
            text-align: center;
        }

            .account-settings .user-profile .user-avatar {
                margin: 0 0 1rem 0;
            }

                .account-settings .user-profile .user-avatar img {
                    width: 90px;
                    height: 90px;
                    -webkit-border-radius: 100px;
                    -moz-border-radius: 100px;
                    border-radius: 100px;
                }

            .account-settings .user-profile h5.user-name {
                margin: 0 0 0.5rem 0;
            }

            .account-settings .user-profile h6.user-email {
                margin: 0;
                font-size: 0.8rem;
                font-weight: 400;
                color: #9fa8b9;
            }

        .account-settings .about {
            margin: 2rem 0 0 0;
            text-align: center;
        }

            .account-settings .about h5 {
                margin: 0 0 15px 0;
                color: #d43f3a;
            }

            .account-settings .about p {
                font-size: 0.825rem;
            }

        .form-control  {
            border: none;
            border-bottom: 2px solid red;
            -webkit-border-radius: 2px;
            -moz-border-radius: 2px;
            border-radius: 2px;
            font-size: 10px;
            font-weight:400;
            background: #ffffff;
            color: #2e323c;
            margin-bottom:8px;
            padding:20px;
            -webkit-transition: 0.2s all;
            transition: 0.2s all;
        }

            .form-control:focus{
                opacity:0.9;
            }
        .card {
            background: #ffffff;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            border: 0;
            margin-bottom: 1rem;
        }
        .text-primary{
           /*to be impl*/
        }

        .primary-btn {
            background-color: #D10024;
            color: #FFF;
            border-radius: 5px;
            padding: 7px 20px;
            text-transform: uppercase;
            font-weight: 700;
            text-align: center;
            -webkit-transition: 0.2s all;
            transition: 0.2s all;
        }

            .primary-btn:hover, .primary-btn:focus {
                opacity: 0.9;
                color: #FFF;
            }

        .btn-secondary {
            border-radius: 5px;
            padding: 7px 20px;
            text-transform: uppercase;
            font-weight: 700;
            text-align: center;
            -webkit-transition: 0.2s all;
            transition: 0.2s all;
        }

            .btn-secondary:hover, .btn-secondary:focus {
                opacity: 0.9;
                color: #FFF;
            }

        .primary-text {
            color: #D10024;
        }
       
    </style>
</head>
<body>
    <div class="container">
        <div class="row gutters">
            <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
                <div class="card h-100">
                    <div class="card-body">
                        <form method="post">
                            <div class="row gutters">
                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                    <h6 class="mb-2 primary-text">Personal Details</h6>
                                </div>
                            
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group-md">
                                        <label for="fullName">Full Name</label>
                                        <input type="text" class="form-control" id="fullName" placeholder="Enter full name" asp-for="@Model.fullname">
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group-md">
                                        <label for="eMail">Email</label>
                                        <input type="email" class="form-control" id="eMail" placeholder="Enter email ID" asp-for="@Model.EmailAddress">>
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group-md">
                                        <label for="phone">Phone</label>
                                        <input type="text" class="form-control" id="phone" placeholder="Enter phone number" asp-for="@Model.Phone">>
                                    </div>
                                </div>
                            </div>
                            <div class="row gutters">
                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                    <h6 class="mt-3 mb-2 primary-text">Address</h6>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group-md">
                                        <label for="Street">Street</label>
                                        <input type="text" class="form-control" id="Street" placeholder="Enter Street" asp-for="@Model.Street">
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group-md">
                                        <label for="ciTy">City</label>
                                        <input type="text" class="form-control" id="ciTy" placeholder="Enter City" asp-for="@Model.City">
                                    </div>
                                </div>
                            </div>
                        
                        <div class="row gutters">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                    <input type="hidden" name="F_name" value="@Model.fullname" />
                                    <input type="hidden" name="Email" value="@Model.EmailAddress" />
                                    <input type="hidden" name="P_number" value="@Model.Phone" />

                                    <div class="text-right">
                                        <button type="button" id="cancel" class="btn btn-secondary">Cancel</button>
                                        <button type="submit" class="btn primary-btn">Update</button>
                                    </div>
                            </div>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script data-cfasync="false" src="/cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script>
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript">

    </script>
</body>

